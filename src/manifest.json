{
  "manifest_version": 3,
  "name": "Vessel",
  "version": "0.2.2",
  "license": "MIT",
  "description": "Automatic temporary containers with permanent container rules for specific domains.",
  "author": "monokrome",
  "homepage_url": "https://github.com/monokrome/vessel",

  "permissions": [
    "contextualIdentities",
    "cookies",
    "menus",
    "sessions",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "vessel@monokro.me",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "icons": {
    "48": "icons/vessel.svg",
    "96": "icons/vessel.svg"
  },

  "action": {
    "default_icon": "icons/vessel.svg",
    "default_title": "Vessel - Container Manager",
    "default_popup": "popup/popup.html"
  },

  "page_action": {
    "default_icon": "icons/vessel.svg",
    "default_title": "Add domain to container",
    "default_popup": "pageaction/pageaction.html"
  },

  "sidebar_action": {
    "default_icon": "icons/vessel.svg",
    "default_title": "Vessel",
    "default_panel": "sidebar/sidebar.html"
  },

  "commands": {
    "add-domain": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Add current domain to a container"
    }
  },

  "background": {
    "scripts": ["background/index.js"],
    "type": "module",
    "persistent": true
  },

  "web_accessible_resources": [
    {
      "resources": ["ask/ask.html", "ask/ask.js", "ask/blend-warning.html", "ask/blend-warning.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
